{
  "name": "arpanlaha.com",
  "version": "0.1.0",
  "description": "Arpan Laha's personal website",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:move && npm run minify",
    "build:move": "mkdir -p dist && cp src/*.html dist && cp src/*.css dist && cp -rf static dist && tsc && npm run inline-css",
    "format": "prettier --write \"**/*.{ts,md,css,json}\"",
    "format:check": "prettier --check \"**/*.{ts,md,css,json}\"",
    "inline-css": "node scripts/inlineCss",
    "minify": "npm run minify:html && npm run minify:js",
    "minify:html": "html-minifier-terser --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css --input-dir dist --output-dir dist --file-ext html",
    "minify:js": "uglifyjs dist/index.js -c -m toplevel -o dist/index.js",
    "lint": "eslint src && stylelint \"src/**/*.css\" && markdownlint README.md",
    "lint:fix": "eslint src && stylelint \"src/**/*.css\" && markdownlint --fix README.md",
    "serve": "static-server dist",
    "start": "npm run build:move && npm run serve",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@hack4impact-uiuc/eslint-plugin": "^2.0.1",
    "clean-css-cli": "^5.4.2",
    "eslint": "^7.5.0",
    "html-minifier-terser": "^6.0.2",
    "inline-css": "^3.0.0",
    "markdownlint-cli": "^0.29.0",
    "prettier": "^2.0.5",
    "static-server": "^2.2.1",
    "stylelint": "^14.0.1",
    "stylelint-config-standard": "^23.0.0",
    "typescript": "^4.4.4",
    "uglify-js": "^3.14.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arpanlaha/arpanlaha.com.git"
  }
}
