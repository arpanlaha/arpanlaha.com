{
  "name": "arpanlaha.com",
  "version": "0.1.0",
  "description": "Arpan Laha's personal website",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.{ts,md,css,json}\"",
    "format:check": "prettier --check \"**/*.{ts,md,css,json}\"",
    "minify": "html-minifier-terser --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --input-dir dist --output-dir dist --file-ext html",
    "lint": "eslint src && stylelint \"src/**/*.css\" && markdownlint README.md",
    "lint:fix": "eslint src && stylelint \"src/**/*.css\" && markdownlint --fix README.md",
    "serve": "static-server dist",
    "start": "mkdir -p dist && cp src/*.html dist && cp src/*.css dist && cp -rf static dist && tsc && npm run serve",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@hack4impact-uiuc/eslint-plugin": "^2.0.1",
    "clean-css-cli": "^5.4.2",
    "eslint": "^7.5.0",
    "html-minifier-terser": "^6.0.2",
    "markdownlint-cli": "^0.29.0",
    "prettier": "^2.0.5",
    "static-server": "^2.2.1",
    "stylelint": "^14.0.1",
    "stylelint-config-standard": "^23.0.0",
    "typescript": "^4.4.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arpanlaha/arpanlaha.com.git"
  }
}
