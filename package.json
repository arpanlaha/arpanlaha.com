{
  "name": "arpanlaha.com",
  "version": "0.1.0",
  "description": "Arpan Laha's personal website",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && webpack --config webpack.config.js && npm run minify",
    "format": "prettier --write \"**/*.{js,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,css}\"",
    "minify": "html-minifier-terser --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --input-dir dist --output-dir dist --file-ext html",
    "lint": "eslint src && stylelint \"static/**/*.css\" && markdownlint README.md",
    "lint:fix": "eslint src && stylelint \"static/**/*.css\" && markdownlint --fix README.md",
    "serve": "static-server dist",
    "start": "webpack-dev-server",
    "temp": "html-minifier-terser --help"
  },
  "devDependencies": {
    "@hack4impact-uiuc/eslint-plugin": "^2.0.1",
    "clean-css-cli": "^4.3.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^3.6.0",
    "eslint": "^7.4.0",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.0.0",
    "html-minifier-terser": "^5.1.1",
    "markdownlint-cli": "^0.23.2",
    "node-sass": "^4.14.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "sass-loader": "^9.0.1",
    "static-server": "^2.2.1",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.6",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.1.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arpanlaha/arpanlaha.com.git"
  }
}
